<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        >

        <TextView
            android:id="@+id/txt_headinng_line"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:paddingHorizontal="1dp"
            android:background="@color/denim_blue"
            />

        <TextView
            android:id="@+id/txt_mainheading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="HighLight 1 Heading"
            android:textColor="@color/denim_blue"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="45dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="10dp"
        android:layout_marginBottom="15dp"
        android:paddingVertical="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_subheading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="This is HighLight 1"
            android:textColor="@color/denim_blue_50"
            android:textSize="18dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginRight="40dp"
            android:padding="0.8dp"
            android:background="@color/denim_blue_50"
            />

        <TextView
            android:id="@+id/txt_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="This is HighLight 1."
            android:textColor="@color/grey_200"
            android:textSize="15dp"
            android:textAlignment="textStart"
            android:gravity="start" />

    </LinearLayout>

</LinearLayout>