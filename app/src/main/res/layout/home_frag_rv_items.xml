<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingVertical="10dp">

    <LinearLayout
        android:id="@+id/lin_lay_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/txt_highlight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="HighLight 1 Heading"
            android:textColor="@color/denim_blue"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginBottom="10dp"
            android:layout_marginHorizontal="5dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lin_lay_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/home_frag_item_design"
        android:elevation="10dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="15dp"
        android:padding="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="This is HighLight 1"
            android:textColor="@color/denim_blue_50"
            android:textSize="18dp"/>

        <TextView
            android:id="@+id/txt_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="This is HighLight 1."
            android:textColor="@color/grey_200"
            android:textSize="15dp"/>

    </LinearLayout>

</LinearLayout>